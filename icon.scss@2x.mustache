@media 
(-webkit-min-device-pixel-ratio: 2), 
(min-resolution: 192dpi) { 
{{#items}}
  %{{name}} {
    background-image: url({{escaped_image}});
    background-position: {{px.offset_x}} {{px.offset_y}};
    background-size: {{background_size_x}} {{background_size_y}};
    display: block;
    height: {{px.height}};
    width: {{px.width}};
  }
{{/items}}
}